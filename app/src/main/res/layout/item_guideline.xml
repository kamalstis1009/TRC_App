<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_radius_100_pad_10_stroke_grey_bg_white"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/item_icon"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_baseline_attach_file_24"
                android:rotation="30"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_title"
                android:textSize="16sp"
                android:text="Item Name"
                android:singleLine="true"
                android:textColor="@color/colorDarkGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_details"
                android:textSize="12sp"
                android:singleLine="true"
                android:textColor="@color/colorMediumGrey"
                android:text="Your Page has information that needs your review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_date"
                android:textSize="10sp"
                android:singleLine="true"
                android:textColor="@color/colorMediumGrey"
                android:text="Meeting Date Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>