<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLightGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.FragmentCalculation">

    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:entries="@array/category_array"
                android:background="@drawable/layer_list_spinner"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Manufact Users"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Services"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Traders"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Turnover"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Cottage"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Total"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Submitting returns"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="250"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:hint="% of return submission"
                    android:drawableTint="@color/colorMediumGrey"
                    android:drawableEnd="@drawable/ic_baseline_person_24"
                    android:background="@drawable/shape_radius_100_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/user_submit_button"
                android:text="Calculate"
                android:textColor="@color/colorWhite"
                app:cornerRadius="25dp"
                android:background="@drawable/shape_radius_100_solid_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>